<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cloudfirestory.FragmentFirestore"
    android:background="#000000">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">


        <EditText
            android:id="@+id/etDBwrite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/digifonts"
            android:hint="123"
            android:textColor="#FA0000"
            android:textSize="42sp"
            tools:text="0123456789" />

        <Button
            android:id="@+id/btnSendDB2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:text="send" />

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="404dp"
        android:layout_height="215dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="240dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/trm10" />

    <TextView
        android:id="@+id/tvDB"
        style="@android:style/Widget.Holo.Light.TextView"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="316dp"
        android:fontFamily="@font/digifonts"
        android:textColor="#F10909"
        android:textSize="95sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        tools:text="0123" />

    <View
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="57dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/figure"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="404dp"
        android:layout_height="215dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="3dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/winstar" />

    <TextView
        android:id="@+id/tvDB2"
        style="@android:style/Widget.Holo.Light.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="112dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/disp_font_regular"
        android:lines="1"
        android:numeric="integer"
        android:textColor="#0971F1"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvDB"
        tools:text="12" />

</androidx.constraintlayout.widget.ConstraintLayout>